<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2" /> <!-- Light color -->
        </shape>
    </item>
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for inner background -->
            <stroke
                android:width="2dp"
                android:color="#BDBDBD"/> <!-- Border color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>